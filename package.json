{
  "name": "the-lando-way",
  "version": "1.0.0",
  "description": "A playbook to tackle problems @home and @work.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheLandolorien/thelandolorien.github.io.git"
  },
  "keywords": [
    "playbook"
  ],
  "author": "Lando Toothman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TheLandolorien/thelandolorien.github.io/issues"
  },
  "homepage": "https://thelandolorien.github.io",
  "scripts": {
    "build": "webpack --config webpack.production.js",
    "start": "webpack serve --config webpack.development.js",
    "test": "npm run test:unit",
    "test:unit": "jest --passWithNoTests",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:component": "cypress run --component",
    "test:e2e": "webpack serve --config webpack.production.js --port 9000 --no-open & wait-on http://localhost:9000 && cypress run && kill $(ps cx | grep '[w]ebpack' | awk '{ print $1 }')"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@types/tailwindcss": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "cypress": "^12.17.2",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "overrides": {
    "tough-cookie": "^4.1.3"
  }
}
